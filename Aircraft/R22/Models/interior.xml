<!-- annunciators-->

    <animation>
        <type>select</type>
        <object-name>rpm.annun</object-name>
        <condition>
            <and>
                <property>instrumentation/alerts/rpm</property>
                <less-than>
                    <property>rotors/main/rpm</property>
                    <value>400</value>
                </less-than>
            </and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>fuel.annun</object-name>
        <condition>
                <less-than>
                    <property>consumables/fuel/total-fuel-gals</property>
                    <value>1.0</value>
                </less-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>clutch.annun</object-name>
        <condition>
            <and>
                <property>systems/electrical/sources/bus</property>
                <property>controls/engines/engine/clutch</property>
                <less-than>
                    <property>rotors/main/rpm</property>
                    <value>300</value>
                </less-than>
            </and>
        </condition>
    </animation>


<!-- R22 sound config-->
<PropertyList>
    <fx>

    <crank>
        <name>crank</name>
        <mode>looped</mode>
        <path>Sounds/cranking.wav</path>
        <property>controls/engines/engine/starter</property>
        <max-dist>5</max-dist>
        <reference-dist>2</reference-dist>
        <volume>
            <property>/sim/model/sound/volume1</property>
        </volume>
        <pitch>
        <property>/engines/engine/starter</property>
        <factor>0.2</factor>
        </pitch>
            <position>
                <x>-0.3</x>
                <y>0</y>
                <z>-1.5</z>
            </position>
    </crank>

    <crank>
        <name>cough</name>
        <mode>once</mode>
        <path>Sounds/coughing.wav</path>
        <property>/engines/engine/on</property>
        <max-dist>20</max-dist>
        <reference-dist>10</reference-dist>
        <volume>
            <property>/sim/model/sound/volume1</property>
        </volume>
        <pitch>
            <property>/engines/engine/on</property>
            <factor>1.0</factor>
        </pitch>
        <position>
            <x>-0.3</x>
            <y>0</y>
            <z>-1.5</z>
        </position>
    </crank>

    <engine>
        <name>engine</name>
        <path>Sounds/wasp.wav</path>
        <property>/engines/engine/on</property>
        <mode>looped</mode>
            <max-dist>500</max-dist>
            <reference-dist>150</reference-dist>
        <volume>
            <property>/sim/model/sound/volume1</property>
        </volume>
        <pitch>
            <property>/engines/engine/n1</property>
            <offset>0</offset>
            <factor>0.01</factor>
            <min>0.35</min>
            <max>1.0</max>
        </pitch>
        <position>
            <x>-0.3</x>
            <y>0</y>
            <z>-1.5</z>
        </position>
    </engine>

        <rotor>
            <name>main rotor</name>
            <mode>looped</mode>
            <path>Sounds/rotor-2blade.wav</path>
            <max-dist>500</max-dist>
            <reference-dist>50</reference-dist>
            <condition>
                <greater-than>
                <property>rotors/main/rpm</property>
                <value>50</value>
                </greater-than>
            </condition>
            <volume>
                <property>/sim/model/sound/volume1</property>
            </volume>
            <volume>
                <property>rotors/main/rpm</property>
                <factor>0.005</factor>
                <min>0</min>
                <max>1.0</max>
            </volume>
            <pitch>
                <property>rotors/main/rpm</property>
                <factor>0.0018</factor>
                <offset>0.0</offset>
                <min>0.00</min>
                <max>1.0</max>
            </pitch>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-1</z>
            </position>
        </rotor>

        <contact>
            <name>ground contact</name>
            <mode>once</mode>
            <path>Sounds/helicopter-skid.wav</path>
            <condition>
                <or>
                    <property>gear/gear[0]/wow</property>
                    <property>gear/gear[1]/wow</property>
                    <property>gear/gear[2]/wow</property>
                    <property>gear/gear[3]/wow</property>
                </or>
            </condition>
            <max-dist>10</max-dist>
            <reference-dist>5</reference-dist>
            <volume>
                <factor>0.8</factor>
            </volume>
            <pitch>
                <factor>0.01</factor>
            </pitch>
            <max-dist>5.0</max-dist>
            <max-dist>10.0</max-dist>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-2</z>
            </position>
        </contact>

        <wind>
            <name>wind</name>
            <mode>looped</mode>
            <path>Sounds/wind.wav</path>
            <condition>
                <and>
                    <property>velocities/airspeed-kt</property>
                    <not>
                        <property>sim/crashed</property>
                    </not>
                </and>
            </condition>
            <max-dist>5</max-dist>
            <reference-dist>2</reference-dist>
            <volume>
                <property>/sim/model/sound/volume1</property>
            </volume>
            <volume>
                <property>position/altitude-ft</property>
                <factor>-0.000015</factor>
                <offset>1.0</offset>
                <min>0.1</min>
                <max>1.0</max>
            </volume>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>0.0015</factor>
                <min>0.03</min>
                <max>0.25</max>
            </volume>
            <pitch>
                <property>velocities/airspeed-kt</property>
                <factor>0.01</factor>
                <offset>1.0</offset>
            </pitch>
            <max-dist>10.0</max-dist>
            <position>
                <x>-2.1</x>
                <y>1.5</y>
                <z>-1.05</z>
            </position>
        </wind>

        <crash>
            <name>intense ground contact</name>
            <mode>once</mode>
            <path>Sounds/crash.wav</path>
            <property>sim/crashed</property>
            <max-dist>50</max-dist>
            <reference-dist>20</reference-dist>
            <volume>
                <factor>1</factor>
            </volume>
            <pitch>
                <factor>0.1</factor>
            </pitch>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-1.5</z>
            </position>
        </crash>

        <alert>
            <name>rpm warning</name>
            <type>avionics</type>
            <mode>once</mode>
            <path>Sounds/beep.wav</path>
            <condition>
                <less-than>
                    <property>rotors/main/rpm</property>
                    <value>500</value>
                </less-than>
            </condition>
            <max-dist>4</max-dist>
            <reference-dist>2</reference-dist>
            <volume>
                <factor>1</factor>
            </volume>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-1.5</z>
            </position>
        </alert>

        <click>
            <name>switches on</name>
            <type>avionics</type>
            <mode>once</mode>
            <path>Sounds/click.wav</path>
            <condition>
                <property>sim/sound/click</property>
            </condition>
            <max-dist>2</max-dist>
            <reference-dist>1</reference-dist>
            <volume>
                <property>sim/sound/volume1</property>
            </volume>
            <position>
                <x>1.5</x>
                <y>0</y>
                <z>-1.8</z>
            </position>
        </click>

        <click>
            <name>switches off</name>
            <type>avionics</type>
            <mode>once</mode>
            <path>Sounds/click.wav</path>
            <condition>
                <not>
                    <property>sim/sound/click</property>
                </not>
            </condition>
            <max-dist>2</max-dist>
            <reference-dist>1</reference-dist>
            <volume>
                <property>sim/sound/volume1</property>
            </volume>
            <position>
                <x>1.5</x>
                <y>0</y>
                <z>-1.8</z>
            </position>
        </click>

    </fx>
</PropertyList>
